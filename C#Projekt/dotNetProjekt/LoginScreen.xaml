<Window x:Class="dotNetProjekt.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotNetProjekt"
        mc:Ignorable="d"
        Title="Login" Height="400" Width="500" FontSize="14" Background="Transparent">
    <Border Background="#2e3137" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="White" FontSize="35" HorizontalAlignment="Center" />
            <Separator></Separator>
            <Label Content="First Name" Foreground="White" />
            <TextBox Name="textEmpFirstName" Background="#545d6a" Foreground="White" FontSize="20" />
            <Label Content="Last Name"  Foreground="White" />
            <TextBox Name="textEmpLastName" Background="#545d6a" Foreground="White" FontSize="20" />
            <Button Name ="btnSubmit" Content="Submit" Margin="60 50"  Background="#545d6a" Foreground="White" FontSize="20" Click="btnSubmit_Click" />
        </StackPanel>
    </Border>
</Window>
